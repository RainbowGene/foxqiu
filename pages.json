							"placeholderColor": "#CCCCCC",
							"disabled": true
						},
						// 配置按钮
						"buttons": [{
								"color": "#FF9619",
								"colorPressed": "#BBBBBB",
								"float": "left",
								"fontSize": "22px",
								"fontSrc": "/static/font/icon.ttf",
								"text": "\ue619"
							},
							{
								"color": "#000000",
								"colorPressed": "#BBBBBB",
								"float": "right",
								"fontSize": "22px",
								"fontSrc": "/static/font/icon.ttf",
								"text": "\ue613"
							}
						]
					}
				}
			}
		}, {
			"path": "pages/news/news",
			"style": {
				"app-plus": {
					"titleNView": false
