						"autoBackButton": true,
						// 配置搜索框
						"searchInput": {
							"align": "left",
							"backgroundColor": "#F7F7F7",
							"borderRadius": "4px",
							"placeholder": "搜索内容",
							"placeholderColor": "#CCCCCC",
							"disabled": false
